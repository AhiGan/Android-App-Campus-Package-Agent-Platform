<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_friend_layout"
    android:orientation="vertical" 
    android:background="#ffffff">

        <RelativeLayout 
		        android:id="@+id/title"
				android:layout_width="fill_parent"
				android:layout_height="45dp" 
				android:gravity="center_vertical" 
				android:background="@drawable/title_bar" >  
					
				<ImageButton 
			    	android:id="@+id/return_addfriend"
			    	android:layout_width="wrap_content" 
		      		android:layout_height="wrap_content"
		      		android:layout_alignParentLeft="true" 
		      		android:layout_centerVertical="true"
		      		android:layout_marginLeft="5dp"
		      		android:background="@drawable/back_img"/>  	
		      		
				<TextView
	        		android:layout_width="wrap_content" 
	        		android:layout_height="wrap_content" 
	        		android:text="添加好友"
	        		android:layout_centerInParent="true"
	        		android:textSize="20sp"		
					android:textColor="#ffffff" /> 	               
		    
	   </RelativeLayout>
        
       <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/search_bar_bg" >

            <EditText
                android:id="@+id/searchname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="姓名"
                android:textColor="#000"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/search_bar_icon_normal" 
                android:background="@drawable/search_bar_edit_pressed" />                
            
            <Button
	           android:id="@+id/searchfirends"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignParentRight="true" 
	      	   android:layout_centerVertical="true"
		       android:layout_marginRight="5dp"
	           android:textSize="18sp"
	           android:textColor="#99cc33"
	           android:background="@null"
	           android:text="搜索" 
	           android:onClick="SearchFriends"/>
            
        </RelativeLayout>
        
        
        <ListView 
			    android:id="@+id/searchfriend_list_view"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>   

    

</LinearLayout>
